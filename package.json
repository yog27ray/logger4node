{
  "name": "logger4node",
  "version": "1.0.52",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test jest",
    "lint-src": "node_modules/eslint/bin/eslint.js src",
    "lint-spec": "node_modules/eslint/bin/eslint.js spec",
    "tslint": "node_modules/tslint/bin/tslint -p ./ -c src/tslint.json",
    "tsc": "node_modules/typescript/bin/tsc -p ./ && rm -rf dist",
    "lint": "npm run lint-src && npm run lint-spec && npm run tslint && npm run tsc",
    "build": "rm -rf dist/* && rm -rf dist/.github && tsc -p ./ && npm run copy-build-files",
    "copy-build-files": "cp -r .github ./dist/.github && cp ./README.md ./dist/README.md && cp package.json ./dist/package.json && cp package-lock.json ./dist/package-lock.json",
    "coverage": "NODE_ENV=test jest --coverage && cp coverage/lcov.info coverage1.lcov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yog27ray/logger4node.git"
  },
  "keywords": [
    "logger",
    "logging",
    "nodejs",
    "typescript",
    "log-level",
    "json-logging",
    "session-logging",
    "debugging",
    "monitoring",
    "log-management",
    "error-logging",
    "express",
    "production",
    "devops",
    "trace-logging"
  ],
  "author": "yog27ray",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/yog27ray/logger4node/issues"
  },
  "homepage": "https://github.com/yog27ray/logger4node#readme",
  "dependencies": {
    "async_hooks": "1.0.0",
    "util": "0.12.5",
    "uuid": "13.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.28.4",
    "@babel/preset-env": "7.28.3",
    "@types/debug": "4.1.12",
    "@types/jest": "30.0.0",
    "@types/node": "24.7.0",
    "@types/sinon": "17.0.3",
    "@typescript-eslint/eslint-plugin": "8.46.0",
    "@typescript-eslint/parser": "8.46.0",
    "eslint": "9.37.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-promise": "7.2.1",
    "eslint-plugin-typescript": "0.14.0",
    "flush-write-stream": "2.0.0",
    "jest-simple-dot-reporter": "1.0.5",
    "node-tslint-rules": "1.20.3",
    "nyc": "17.1.0",
    "sinon": "21.0.0",
    "split2": "4.2.0",
    "tail": "2.2.6",
    "ts-jest": "29.4.4",
    "ts-node": "10.9.2",
    "tslint": "6.1.3",
    "typescript": "5.9.3"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "server/**/*.spec.ts",
      "node_modules"
    ],
    "extension": [
      ".ts"
    ],
    "sourceMap": true,
    "instrument": true,
    "fullTrace": true
  }
}
