{
  "name": "logger4node",
  "version": "1.0.48",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test node_modules/.bin/mocha './spec/**/*.spec.ts'",
    "build": "rm -rf dist/* && rm -rf dist/.github && tsc -p ./ && npm run copy-build-files",
    "copy-build-files": "cp -r .github ./dist/.github && cp ./README.md ./dist/README.md && cp package.json ./dist/package.json && cp package-lock.json ./dist/package-lock.json",
    "coverage": "nyc mocha './spec/**/*.spec.ts' && nyc report --reporter=text-lcov > coverage1.lcov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yog27ray/logger4node.git"
  },
  "keywords": [
    "logger",
    "logging",
    "nodejs",
    "typescript",
    "log-level",
    "json-logging",
    "session-logging",
    "debugging",
    "monitoring",
    "log-management",
    "error-logging",
    "express",
    "production",
    "devops",
    "trace-logging"
  ],
  "author": "yog27ray",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/yog27ray/logger4node/issues"
  },
  "homepage": "https://github.com/yog27ray/logger4node#readme",
  "dependencies": {
    "async_hooks": "1.0.0",
    "util": "0.12.5",
    "uuid": "11.0.4"
  },
  "devDependencies": {
    "@types/chai": "5.0.1",
    "@types/debug": "4.1.12",
    "@types/mocha": "10.0.10",
    "@types/node": "22.10.5",
    "@types/sinon": "17.0.3",
    "@typescript-eslint/eslint-plugin": "8.19.1",
    "@typescript-eslint/parser": "8.19.1",
    "chai": "4.4.1",
    "eslint": "9.17.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-promise": "7.2.1",
    "eslint-plugin-typescript": "0.14.0",
    "flush-write-stream": "2.0.0",
    "mocha": "11.0.1",
    "node-tslint-rules": "1.20.3",
    "nyc": "17.1.0",
    "sinon": "19.0.2",
    "sinon-chai": "3.7.0",
    "split2": "4.2.0",
    "tail": "2.2.6",
    "ts-node": "10.9.2",
    "tslint": "6.1.3",
    "typescript": "5.7.3"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "server/**/*.spec.ts",
      "node_modules"
    ],
    "extension": [
      ".ts"
    ],
    "sourceMap": true,
    "instrument": true,
    "fullTrace": true
  },
  "mocha": {
    "color": true,
    "ui": "bdd",
    "recursive": true,
    "timeout": 20000,
    "require": [
      "ts-node/register/transpile-only"
    ],
    "reporter": "dot",
    "exit": true
  }
}
